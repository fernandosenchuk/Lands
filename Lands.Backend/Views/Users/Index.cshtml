@model IEnumerable<Lands.Domain.User>

@{
    ViewBag.Title = "Index";
}

<h2>Users</h2>

@*
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
*@
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telephone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImagePath)
        </th>
        <th>
            User Type
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telephone)
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.ImageFullPath))
                {
                    <img src="@Url.Content(item.ImageFullPath)" style="width:30px;height:30px;" />
                }
                else
                {
                    <img src="~/Content/Images/no_image.png" style="width:30px;height:30px;" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserType.Name)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.UserId }) |*@
                @Html.ActionLink("Details", "Details", new { id = item.UserId })
                @*@Html.ActionLink("Delete", "Delete", new { id = item.UserId })*@
            </td>
        </tr>
    }

</table>

<style>
    img {
        border-radius: 50%;
    }
</style>
